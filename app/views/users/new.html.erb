<h1>Create a Night & Day account</h1>

<div class="row">
	<div class="span offset3">
		<%= simple_form_for @user, :url => users_path, :html => {:class => "form-horizontal"} do |f| %>

		<%= f.error_notification %>
		<%= f.full_error :image_file_size, class: "alert alert-error" %>
		<%= f.full_error :image_content_type, class: "alert alert-error" %>

		<%= f.input :avatar, label: "Upload your Avatar" %>
		
		<%= f.input :firstname%>

		<%= f.input :lastname%>

		<%= f.input :email%>

		<%= f.button :submit, class: "btn btn-primary" %>
		<%end%>
	</div>
</div>
