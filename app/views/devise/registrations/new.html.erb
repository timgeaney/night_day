<h2>Sign up</h2>
<div class="row">
	<div class="span offset2">
		<%= form_for resource, :as => resource_name, :url => registration_path(resource_name), html: { multipart: true, :class => "form-horizontal" }  do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %>
		<%= f.text_field :email %></div>

		<div><%= f.label :firstname %>
		<%= f.text_field :firstname %></div>

		<div><%= f.label :lastname %>
		<%= f.text_field :lastname %></div>

		<div><%= f.label :avatar %>
		<%= f.file_field :avatar %></div>

		<div><%= f.label :password %>
		<%= f.password_field :password %></div>

		<div><%= f.label :password_confirmation, 'Confirmation' %>
		<%= f.password_field :password_confirmation %></div>

  <div><%= f.submit 'Sign up' %></div>

<% end %>

  </div>
</div>
<%= render "devise/shared/links" %>
